{
  "name": "@manifoldxyz/monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "publish:sdk": "pnpm --filter @manifoldxyz/client-sdk publish --access public",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "x402:start": "pnpm --filter x402-express run start",
    "x402:dev": "pnpm --filter x402-express run dev"
  },
  "devDependencies": {
    "turbo": "^2.5.8"
  },
  "engines": {
    "node": ">=20"
  }
}